  "engines": {
    "node": "20"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "private": true
}
