{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for LeetVision",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
